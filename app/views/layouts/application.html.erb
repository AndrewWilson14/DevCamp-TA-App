<!DOCTYPE html>
<html>
  <head>
    <title>DevCampTaApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'queue', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if user_signed_in? %>
        <%= render "pages/navbar" %>
      <% end %>
    </div>
    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
      <div class="col-md-4">
          <%= render "pages/user_queue" %>
      </div>
      <div class="col-md-8 block-background">
          <%= render "pages/ticket" %>
      </div>
    </div>
  </body>
</html>
